
{
    "name":"bright-cloud-studio/modal-gallery",
    "description":"Create a gallery where each slide can contain unlimited hotspot links which trigger modal boxes.",
    "keywords": ["contao", "modal", "gallery", "bright", "cloud", "studio"],
    "type": "contao-bundle",
    "homepage": "http://brightcloudstudio.com/",
    "license": "LGPL-3.0+",
    "authors":[
        {
            "name": "Bright Cloud Studio",
            "homepage": "https://brightcloudstudio.com",
            "email": "mark@brightcloudstudio.com",
            "role": "Developer"
        }
    ],
    "support":{
        "issues": "https://github.com/bright-cloud-studio/modal-gallery/issues",
        "source": "https://github.com/bright-cloud-studio/modal-gallery"
    },
    "require":{
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "menatwork/contao-multicolumnwizard-bundle": "^3.5.5"
    },
    "extra":{
        "contao-manager-plugin": "Bcs\\ModalGalleryBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\ModalGalleryBundle\\": "src"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    }
}
